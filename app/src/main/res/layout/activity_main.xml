<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rmjsoft.rpncalculatorv2.MainActivity">

    <TextView
        android:id="@+id/txtStack"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/txtEdit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:enabled="true"
        android:focusableInTouchMode="false"
        android:gravity="bottom"
        android:hint="@string/enter_number_or_operation"
        android:inputType="none"
        android:scrollbars="vertical"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="30sp" />

    <!--<com.alimuzaffar.lib.widgets.AnimatedEditText-->
    <!--android:id="@+id/txtEdit"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_weight="1"-->
    <!--android:enabled="true"-->
    <!--android:gravity="bottom"-->
    <!--android:hint="@string/enter_number_or_operation"-->
    <!--android:focusableInTouchMode="false"-->
    <!--android:inputType="none"-->
    <!--android:scrollbars="vertical"-->
    <!--android:textColor="@color/white"-->
    <!--android:textColorHint="@color/white"-->
    <!--android:textSize="30dp"-->
    <!--app:animationType="popIn"-->
    <!--app:animateCursor="true"-->
    <!--app:animateTextClear="true"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnC"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btnround"
                    android:text="@string/clean"
                    android:textColor="@color/white"
                    android:textSize="@dimen/number_button_text_size" />

                <Button
                    android:id="@+id/btnR"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBrothers"
                    android:text="@string/reset"
                    android:textColor="@color/white"
                    android:textSize="@dimen/number_button_text_size" />

                <Button
                    android:id="@+id/btnP"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBrothers"
                    android:text="@string/delete_element"
                    android:textColor="@color/white"
                    android:textSize="@dimen/number_button_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn7"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seven"
                    android:textColor="@color/white"
                    android:textSize="@dimen/number_button_text_size" />

                <Button
                    android:id="@+id/btn8"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eight"
                    android:textColor="@color/white"
                    android:textSize="@dimen/number_button_text_size" />

                <Button
                    android:id="@+id/btn9"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nine"
                    android:textColor="@color/white"
                    android:textSize="@dimen/number_button_text_size" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn4"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/four"
                    android:textColor="@color/white"
                    android:textSize="@dimen/number_button_text_size" />

                <Button
                    android:id="@+id/btn5"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/five"
                    android:textColor="@color/white"
                    android:textSize="@dimen/number_button_text_size" />

                <Button
                    android:id="@+id/btn6"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/six"
                    android:textColor="@color/white"
                    android:textSize="@dimen/number_button_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/one"
                    android:textColor="@color/white"
                    android:textSize="@dimen/number_button_text_size" />

                <Button
                    android:id="@+id/btn2"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/two"
                    android:textColor="@color/white"
                    android:textSize="@dimen/number_button_text_size" />

                <Button
                    android:id="@+id/btn3"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/three"
                    android:textColor="@color/white"
                    android:textSize="@dimen/number_button_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPeriod"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dot"
                    android:textColor="@color/white"
                    android:textSize="@dimen/number_button_text_size" />

                <Button
                    android:id="@+id/btn0"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:textColor="@color/white"
                    android:textSize="@dimen/number_button_text_size" />

                <Button
                    android:id="@+id/btnSpace"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/space"
                    android:textColor="@color/white"
                    android:textSize="@dimen/number_button_text_size" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5">

            <Button
                android:id="@+id/btnX"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@drawable/btnroundmiddle"
                android:text="@string/mult"
                android:textColor="@color/white"
                android:textSize="@dimen/number_button_text_size"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnD"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@color/colorBrothers"
                android:text="@string/div"
                android:textColor="@color/white"
                android:textSize="@dimen/number_button_text_size"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnPlus"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@color/colorBrothers"
                android:text="@string/sum"
                android:textColor="@color/white"
                android:textSize="@dimen/number_button_text_size"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnRes"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@color/colorBrothers"
                android:text="@string/res"
                android:textColor="@color/white"
                android:textSize="@dimen/number_button_text_size"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnE"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@drawable/btnroundend"
                android:text="@string/exec"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
